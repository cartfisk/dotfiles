############
### NODE ###
############
export NVM_DIR="$HOME/.nvm"
alias loadnvm_no_completions="[ -s '/usr/local/opt/nvm/nvm.sh' ] && . '/usr/local/opt/nvm/nvm.sh'"  # This loads nvm
alias loadnvm="loadnvm_no_completions && [ -s '$NVM_DIR/bash_completion' ] && \. '$NVM_DIR/bash_completion'"  # This loads nvm bash_completion

############
#### 4C ####
############

export VF2_PROJECT_PATH="~/development/4C/voxsupFrontend2/services/vf2"
export VF2_NODE_VERSION="12.16.3"
# base
alias vox="cd $VF2_PROJECT_PATH"

alias voxa="vox && source env/bin/activate"

alias vf2shell="voxa && python server/manage.py shell"
alias vfc="code ~/development/4C/vf2-workspace.code-workspace" # open vf2 vscode workspace
alias notes="code ~/development/notes.code-workspace" # open notes workspace

alias voxcel="voxa && cd server && celery -A celery_main.celery worker -Q celery --concurrency=4 -l Debug" # run celery

alias load_node="loadnvm_no_completions && nvm use $VF2_NODE_VERSION" # source vf2 production node version

alias voxnode="vox && load_node"
alias voxanode="voxa && load_node"

alias voxbase="$VF2_PROJECT_PATH/tools/debug" # run vf2 local server

alias voxall="voxnode && voxbase"

# load only certain services
alias voxs="voxanode && EXTS=admin,scope,snapchat,reportCenter voxbase"
alias voxl="voxanode && EXTS=admin,scope,linkedin voxbase"
alias voxf="voxanode && EXTS=admin,scope,facebook voxbase"
alias voxp="voxanode && EXTS=admin,scope,pinterest voxbase"
alias voxc="voxanode && EXTS=admin,scope,creativeHub,brandProfiles,facebook voxbase"
alias voxsc="voxanode && EXTS=admin,scope,creativeHub,snapchat,reportCenter voxbase"
alias voxclc="voxanode && EXTS=admin,scope,creativeHub,snapchat,linkedin,reportCenter voxbase"
alias voxcc="voxanode && EXTS=admin,snapchat,facebook,crossChannel,creativeHub, voxbase"

# staying up to date
alias deps="voxa && pip install -r requirements.txt && voxnode && npm install"
alias alemb="voxa && cd db_versioning && alembic upgrade head && cd ../"

# misc. 4C
alias tunnel="cd $VF2_PROJECT_PATH/tools && node tunnel"
alias release-candy="git checkout release-candy && git fetch upstream && git reset --hard upstream/release-candy"
alias prod-bugfix="git checkout prod-bugfix && git fetch upstream && git reset --hard upstream/prod-bugfix"

# MySQL
alias mysqlproc="mysqladmin -u local_user -plocal processlist"
alias import_auth="mysql -u local_user -plocal auth <"
alias import_voxsupads="mysql -u local_user -plocal voxsupads <"

#################
#### General ####
#################

# misc.
alias chrome="/Applications/Google\ Chrome.app/Contents/MacOS/Google\ Chrome --auto-open-devtools-for-tabs"
alias la="exa -la --group-directories-first"
alias gds="git diff --stat"

# macOS
alias lock="mac lock"
alias nap="mac sleep"
alias audio="sudo kill `ps -ax | grep 'coreaudiod' | grep 'sbin' | awk '{print $1}'`"

# zshrc
alias zshrc="code ~/.zshrc_local_after"
alias srczsh="source ~/.zshrc"

# dev-stuff
alias arduino="open '/Applications/Arduino.app'"

eval "$(thefuck --alias)"

export PATH=/usr/local/bin:/usr/local/sbin:~/bin:$PATH
export VIRTUAL_ENV_DISABLE_PROMPT=0
export DEFAULT_USER="carterkonz"

alias fwreload="sudo kextunload /System/Library/Extensions/IOFireWireFamily.kext/Contents/PlugIns/AppleFWOHCI.kext/ && sudo kextload /System/Library/Extensions/IOFireWireFamily.kext/Contents/PlugIns/AppleFWOHCI.kext/"
alias tbreload="sudo kextunload /System/Library/Extensions/AppleThunderboltPCIAdapters.kext && sudo kextload /System/Library/Extensions/AppleThunderboltPCIAdapters.kext"

# Preferred editor for local and remote sessions
# if [[ -n $SSH_CONNECTION ]]; then
