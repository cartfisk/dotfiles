######################
#### pure- Colors ####
######################
# https://www.ditig.com/256-colors-cheat-sheet
zstyle :prompt:pure:prompt:success color 010
zstyle :prompt:pure:prompt:continuation color 245
zstyle :prompt:pure:git:branch color 'green'
# ssh
zstyle :prompt:pure:host color 105
zstyle :prompt:pure:prompt:user color 061

##############
#### Work ####
##############
export VF2_PROJECT_PATH="~/development/mediaocean/voxsupFrontend2"

alias vox="$VF2_PROJECT_PATH/.vox"
alias vfc="code $VF2_PROJECT_PATH/scope.code-workspace" # open vf2 vscode workspace

alias vpnc='printf $(op read op://personal/Mediaocean/username)"\n"$(op read op://personal/Mediaocean/password)"\ny" | /opt/cisco/anyconnect/bin/vpn -s connect "Mediaocean VPN-NA"'
alias vpn="vpnc"
alias vpnd="/opt/cisco/anyconnect/bin/vpn disconnect"

#################
#### General ####
#################
export HACKINTOSH=$HOME/development/hackintosh/

# misc.
alias pipup="pip install --upgrade pip"
alias mysqlproc="mysqladmin -u local_user -plocal processlist"
alias kc="kubectl"
alias la="exa -la --group-directories-first"
alias gds="git diff --stat"

# zshrc
alias zshrc="code ~/.zshrc_local_after"
alias srczsh="source ~/.zshrc"

# Homebrew
export PATH=/usr/local/bin:/usr/local/sbin:~/bin:$PATH
# VSCode CLI
export PATH="/Applications/Visual Studio Code.app/Contents/Resources/app/bin:$PATH"

export VIRTUAL_ENV_DISABLE_PROMPT=0

eval "$(direnv hook zsh)"
eval "$(thefuck --alias)"
eval "$(fnm env --use-on-cd)"
